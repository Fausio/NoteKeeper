<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteKeeper.Views.ItemDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="SaveItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout Spacing="20" Padding="15">


        <Picker x:Name="NoteCurse" 
                FontSize="Medium"
                Title="Curse">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Curse 1</x:String>
                    <x:String>Curse 2</x:String>
                    <x:String>Curse 2</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Entry FontSize="Medium"  
               x:Name="NoteHeading"
               Placeholder="Note Heading"
               Text="{Binding Heading}"/>


        <Editor x:Name="NoteText" 
                FontSize="Medium"
                Placeholder="Note Text"
                AutoSize="TextChanges"
                Text="{Binding Text}"/>

    </StackLayout>

</ContentPage>